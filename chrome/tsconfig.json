{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": false,
		"sourceMap": true,
		"outDir": "./dist",
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"types": [
			"react",
			"react-dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
